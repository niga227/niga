{
  "name": "niga/niga",
  "description": "Niga PHP Framework",
  "type": "project",
  "keywords": [
    "framework",
    "niga",
    "PHP"
  ],
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "config/functions.php"
    ]
  },
  "authors": [
    {
      "name": "Abass Dev",
      "email": "abass@abassdev.com",
      "role": "Lead Developer"
    }
  ],
  "require": {
    "php": "^7.4|^8.0"
  },
  "config": {
    "bin-dir": "bin",
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "scripts": {
    "dev-server": "php -S localhost:8000 -t public/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
